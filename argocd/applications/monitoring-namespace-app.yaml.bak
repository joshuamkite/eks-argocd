apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: monitoring-namespace-setup
  namespace: argocd
spec:
  project: default
  source:
    repoURL: "https://github.com/joshuamkite/eks-prometheus-grafana"
    targetRevision: feature/argocd
    path: "kubernetes/monitoring-namespace/monitoring-namespace.yaml"
  destination:
    server: "https://kubernetes.default.svc"
    namespace: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
